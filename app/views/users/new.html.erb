<%= form_with(url:"/users", method: "post") do %>
	<div class="form-group">
		<%= label_tag(:user, "Name") %><br>
		<%= text_field(:user, :name, class:"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag(:height, "Height (in inches)") %><br>
		<%= text_field(:user, :height, class:"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag(:happiness, "How happy are you? (1-5 scale)") %><br>
		<%= text_field(:user, :happiness, class:"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag(:nausea, "How nauseous are you? (1-5 scale)") %><br>
		<%= text_field(:user, :nausea, class:"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag(:tickets, "How many dollars are in your pocket?") %><br>
		<%= text_field(:user, :tickets, class:"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag(:admin, "Check box if you are a theme park owner")%>
		<%= check_box_tag "0", @user.admin? %>
	</div>
	<div class="form-group">
		<%= label_tag(:password, "Password") %><br>
		<%= password_field(:user, :password, class:"form-control") %>
	</div>
	<div class="form-group">
		<%= submit_tag("Create User", class:"btn btn-primary")%>
	</div>
<% end %>
